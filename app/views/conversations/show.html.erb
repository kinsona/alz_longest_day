<div class="wrapper" id='convo-styles'>
  <div class="container">

    <div class="right">
      <div class="top"><span>To: <span class="name"><%= @conversation.partner(current_user.id).email %></span></span></div>
      
      <div class="chat active-chat" data-chat="person2">
        <div class="conversation-start">
          <span><%= @messages.last.created_at %></span>
        </div>

        <% @messages.each do |message| %>

          <% if message.user.id == @current_user_id %>
            <div class="bubble me">
              <%= message.body %>
            </div>
          <% else %>
            <div class="bubble you">
              <%= message.body %>
            </div>
          <% end %>
        <% end %>

      </div>

      
      <div class="write">
        <%= form_for @new_message, class: 'form-inline' do |f| %>
          <%= f.hidden_field :conversation_id %>
          <div class='form-group'>
            <%= f.text_field :body, class: 'form-control' %>
          </div>
          <%# f.submit 'Send!' %>
        <% end %>
      </div>

    </div>
  </div>
</div>
