<%= nav_bar fixed: :top, brand: "Carewell", responsive: true do %>

    <%= menu_group pull: :right do %>
        <% if current_user %>
            <%= menu_item "Home", root_path %>
            <%= menu_item "Search", '#' %>
            <%= menu_item "Messages", conversations_path %>
            <%= drop_down "You" do %>
                <%= menu_item "Profile", '#' %>
                <%= menu_item "Settings", '#' %>
                <%= menu_item "Log Out", destroy_user_session_path, method: 'DELETE' %>
           <% end %>
        <% else %>
            <%= menu_item "Log In", new_user_session_path %>
        <% end %>
    <% end %>

<% end %>